{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src", // 루트 폴더 url
    "downlevelIteration": true, // https://tried.tistory.com/96
    "typeRoots": ["./node_modules/@types", "@types"] // https://velog.io/@nsunny0908/TIL-46-Typescript-image-import
  },
  "include": ["src"]
}
